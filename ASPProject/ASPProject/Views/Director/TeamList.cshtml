@model IEnumerable<ASPProject.Entities.Team>

@{
    ViewBag.Title = "TeamList";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
<div class="center">
    <table class="table table-striped table-hover table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <button class="btn" style="background-color:#7e8289" onclick="location.href='@Url.Action("TeamDetails", "Director", new { id = item.Id })'">Szczegóły</button>
                </td>
            </tr>
        }

    </table>
</div>
