@model IEnumerable<ASPProject.Entities.Team>

@{
    ViewBag.Title = "TeamList";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
<div class="center">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "TeamDetails", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
