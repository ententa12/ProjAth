<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/materialize/css/materialize.min.css" rel="stylesheet"
          type="text/css" />
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/materialize/js/materialize.min.js"></script>
    <script>

        $(document).ready(function () {
            $('.sidenav').sidenav();
        });
    </script>
</head>
<body>
    <div class="header">
        <nav>
            <div class="nav-wrapper">
                <ul class="left hide-on-med-and-down">
                    <li class="textcolor"><a href="@Url.Action("Index", "User")">Moje zadania</a></li>
                    <li class="textcolor">@Html.ActionLink("Lista zadań do wzięcia", "MyTeams", "User")</li>
                </ul>

                <ul class="right hide-on-med-and-down">
                    <li class="textcolor">@Html.ActionLink("Moje konto", "UserDetails", "Account")</li>
                    <li class="textcolor">@Html.ActionLink("Wyloguj", "LogOff", "Account")</li>
                </ul>
        <a href="#" class="sidenav-trigger" data-target="mobile-demo">
            <i class="material-icons">menu</i>
        </a>

        <ul class="sidenav" id="mobile-demo">
            <li>
                <a href="@Url.Action("Index", "User")">Moje zadania</a>
            </li>
            <li>@Html.ActionLink("Lista zadań do wzięcia", "MyTeams", "User")</li>
            <li>@Html.ActionLink("Moje konto", "UserDetails", "Account")</li>
            <li>@Html.ActionLink("Wyloguj", "LogOff", "Account")</li>
        </ul>
            </div>
        </nav>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
